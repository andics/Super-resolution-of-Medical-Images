function testSDNiqe(imageFile)
%Test different standard deviation values for deblurring and check which
%one produces the best score

figure;

imageTest = @(image, sizePSF, SDPSF, degSim) imageDeconv(image, sizePSF, SDPSF, degSim);

fun = @(SDPSF) imageTest(imageFile,round(SDPSF*6+1),SDPSF, 2);

fplot(fun, [0.1, 2, 0,1]);

end

end

